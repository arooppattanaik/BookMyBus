@page
@model BookingHistoryModel
@{
}
<body style="background-color:LightBlue;">
</body>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-rc.17/css/uikit.min.css" />

<form action="" method="POST" style="margin-top: 50px;">
      <div class="form-group">
        <label class="control-label" for="search">Enter your name</label>
        <input type="text" class="form-control" name="search" id="search" />
      </div>
      <div class="form-group">
        <input type="submit" value="Search Booked Tickets" class="btn btn-default" />
      </div>
    </form>


    @if(Model.SearchCompleted) {
    <table class="table table-bordered table-striped">
        <thead>
            <tr bgcolor="#7A91DE">
                <th>Namw</th>
                <th>Date Of Birth</th>
                <th>Phone Number</th>
                <th>Gender</th>
                <th>Seat Number</th>
                 <th>Price</th>
                <th>Date Of Booking</th>
                <th>Date Of Journey</th>
                 <th>Ticket Class</th>
                  <th>Source</th>
                   <th>Destination</th>
                    <th>Bus Number</th>
            </tr>
        </thead>
        <tbody>
            @if(Model.SearchResults.Count > 0) {
                @foreach(var ticket in Model.SearchResults) {
                    <tr bgcolor="#E6E6FA">
                        <td>@ticket.Customer.Name</td>
                         <td>@ticket.Customer.DateOfBirth</td>
                          <td>@ticket.Customer.PhoneNumber</td>
                            <td>@ticket.Customer.Gender</td>
                        <td>@ticket.SeatNumber</td>
                            <td>@ticket.Price</td>
                                <td>@ticket.DateOfBooking</td>
                                    <td>@ticket.DateOfJounery</td>
                                        <td>@ticket.TicketClass</td>
                             <td>@ticket.BusRoute.Source</td>
                                  <td>@ticket.BusRoute.Destination</td>
                                            <td>@ticket.BusRoute.BusNumber</td>
                       
                    </tr>
                }
            } else {
                <tr class="danger">
                    <td colspan="4" class="text-center">
                        No results found for term "@Model.Search"
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <div class="alert alert-info">
        <p>
            Enter the your name to get booked history <strong>Serach for booked tickets</strong>

</p>
    </div>
}