<body style="background-color:LightBlue;">
</body>
<h2 class="uk-heading-line uk-text-center"><span>Customer Details</span></h2>

<div class="row" style="background-color:lightblue">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">


         <div class="form-group">
                 <label class="control-label" asp-for="Customer.Name">Name:</label>
            <input type="text" class="form-control" asp-for="Customer.Name" id="Bname" />
            </div>
            
            <div class="form-group">
                 <label class="control-label" asp-for="Customer.PhoneNumber">Phone Number:</label>
            <input type="text" class="form-control" asp-for="Customer.PhoneNumber" id="BPhn" />
            </div> 

             
            
            <div class="form-group">
                <label asp-for="Customer.DateOfBirth" class="control-label"></label>
                <input asp-for="Customer.DateOfBirth" class="form-control" />
                <span asp-validation-for="Customer.DateOfBirth" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                 <label class="control-label" asp-for="Customer.Gender">Gender:</label>
            <input type="text" class="form-control" asp-for="Customer.Gender" id="BGender" />
            </div>




             
            <div class="form-group">
                <label asp-for="Customer.TicketId" class="control-label"></label>
                <select asp-for="Customer.TicketId" class ="form-control" asp-items="ViewBag.TicketId"></select>
                <span asp-validation-for="Customer.TicketId" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Submit Review" class="btn btn-danger" />
            </div>

           

        </form>
    </div>
</div>